<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         id="WebApp_ID"
         version="5.0">

  <display-name>DatPhongKhachSan</display-name>

  <!-- ===== Servlet: KhachSan ===== -->
  <servlet>
    <servlet-name>KhachSanController</servlet-name>
    <servlet-class>controller.KhachSanController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KhachSanController</servlet-name>
    <url-pattern>/khachsan</url-pattern>
  </servlet-mapping>

  <!-- ===== Servlet: Phong ===== -->
  <servlet>
    <servlet-name>PhongController</servlet-name>
    <servlet-class>controller.PhongController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PhongController</servlet-name>
    <url-pattern>/phong</url-pattern>
  </servlet-mapping>

  <!-- ===== Servlet: KhachHang ===== -->
  <servlet>
    <servlet-name>KhachHangController</servlet-name>
    <servlet-class>controller.KhachHangController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KhachHangController</servlet-name>
    <url-pattern>/khachhang</url-pattern>
  </servlet-mapping>

  <!-- ===== Servlet: DonDatPhong ===== -->
  <servlet>
    <servlet-name>DonDatPhongController</servlet-name>
    <servlet-class>controller.DonDatPhongController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DonDatPhongController</servlet-name>
    <url-pattern>/dondatphong</url-pattern>
  </servlet-mapping>

  <!-- ===== Servlet: TinhTrangPhong ===== -->
  <servlet>
    <servlet-name>TinhTrangPhongController</servlet-name>
    <servlet-class>controller.TinhTrangPhongController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TinhTrangPhongController</servlet-name>
    <url-pattern>/tinhtrangphong</url-pattern>
  </servlet-mapping>

  <!-- ===== Trang mặc định khi mở project ===== -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

</web-app>
